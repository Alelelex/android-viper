<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
	>

	<data>

		<variable
			name="presenter"
			type="cz.helmisek.android.androidrxvipersample.core.presenter.WeatherActivityPresenter"/>

		<variable
			name="viewmodel"
			type="cz.helmisek.android.androidrxvipersample.core.viewmodel.WeatherActivityViewModel"/>
	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="@color/colorPrimary"
			android:fitsSystemWindows="true"
			app:title="@string/app_name"
			app:titleTextColor="@android:color/white"/>

		<cz.kinst.jakub.view.StatefulLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:state="@{viewmodel.state}">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/colorPrimary">

				<TextView
					android:id="@+id/textView2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="72dp"
					android:text='@{String.format("%.1f", viewmodel.currentWeatherEntity.main.temp)}'
					android:textColor="@android:color/white"
					android:textSize="48sp"
					tools:text="24C"/>
			</RelativeLayout>

		</cz.kinst.jakub.view.StatefulLayout>

	</LinearLayout>
</layout>